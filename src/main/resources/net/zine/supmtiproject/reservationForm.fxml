<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="600" style="-fx-background-color: #F9F9F9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.zine.supmtiproject.controllers.ReservationController">

    <Label layoutX="195.0" layoutY="30.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Réserver un rendez-vous" />

    <Label layoutX="80" layoutY="90" text="Nom du patient :" />
    <TextField fx:id="patientNameField" layoutX="220" layoutY="85" prefWidth="250" />

    <Label layoutX="80" layoutY="140" text="Date du rendez-vous :" />
    <DatePicker fx:id="datePicker" layoutX="220" layoutY="135" prefWidth="250" />

    <Label layoutX="80" layoutY="190" text="Heure :" />
    <ComboBox fx:id="timePicker" layoutX="220" layoutY="185" prefWidth="250" />

    <Label fx:id="infoLabel" layoutX="220.0" layoutY="216.0" prefHeight="18.0" prefWidth="250.0" style="-fx-text-fill: red; -fx-font-size: 12px;" />

    <Label layoutX="80" layoutY="240" text="Motif de la visite :" />
    <TextArea fx:id="reasonField" layoutX="220" layoutY="235" prefHeight="100" prefWidth="250" />

    <Button layoutX="235.0" layoutY="398.0" onAction="#confirmAppointment" style="-fx-background-color: rgba(230,9,9,0.97); -fx-text-fill: white; -fx-background-radius: 10;" text="Confirmer le rendez-vous" />

    <Label layoutX="171.0" layoutY="435.0" style="-fx-text-fill: #888; -fx-font-size: 13px;" text="“Chaque cœur mérite une attention particulière.”" />

</AnchorPane>
